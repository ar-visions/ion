{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build-ux-app",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../ion/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "windows": {
                "command": "msbuild ion.sln /t:ux-app"
            },
            "osx": {
                "command": "make ux-app -j4"
            }
        },
