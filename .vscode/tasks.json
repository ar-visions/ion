{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build-ux-app",
            "type": "shell",
            "command": "make ux-app -j1",
			"options": {
                "cwd": "${workspaceFolder}/../ion/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"]
        },
        {
            "label": "build-circles",
            "type": "shell",
            "command": "make circles -j1",
			"options": {
                "cwd": "${workspaceFolder}/../ion/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"]
        }
	]
}