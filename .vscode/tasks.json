{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/../orbiter/build"
			},
			"command": "make -j10 triangle",
			"presentation": {
				"reveal": "silent",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": [
				"$nvcc"
			]
		},
		{
            "label": "build-orbiter",
            "type": "shell",
            "command": "make orbiter -j1",
			"options": {
                "cwd": "${workspaceFolder}/../orbiter/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"]
        },
        {
            "label": "build-triangle",
            "type": "shell",
